{
  "plugins": ["@typescript-eslint"],
  "extends": ["next/core-web-vitals"],
  "parserOptions": {
    "project": ["./tsconfig.json"] // Specify it only for TypeScript files
  },

  "rules": {
    "@typescript-eslint/no-floating-promises": "error",
    "require-await": "error",
    "react-hooks/exhaustive-deps": "off"
  }
}
