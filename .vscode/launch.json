{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug full stack (prod)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Next.js: debug full stack (dev)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev:dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
