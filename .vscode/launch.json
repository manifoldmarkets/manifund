{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side (dev)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev:dev"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug full stack (dev)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev:dev",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
